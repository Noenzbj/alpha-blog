<h1 class="text-center">Create a new category</h1>
<div class="container mt-1">
  
  <div class = "row justify-content-center text-white">
    <div class = "col-10">
      <%= render  "shared/errors",obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 background rounded", local: true) do |f| %>
      
      <div class="form-group row ">   
        <%= f.label :name, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of category" %>
        </div>
      </div>

     
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-secondary"  %>
        </div>
      <%end%>
    </div>
  </div>
</div>