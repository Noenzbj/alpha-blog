<%= render  "shared/errors",obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 background rounded", local: true) do |f| %>

<div class="form-group row ">   
  <%= f.label :name, class: "col-2 col-form-label" %>
  <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of category" %>
  </div>
</div>


  <div class="form-group row justify-content-center">
    <%= f.submit(@category.new_record? ? "Create" : "Update", class: "btn btn-secondary") %>
  </div>
<%end%>