<div class="container mt-1">
  
  <div class = "row justify-content-center text-white">
    <div class = "col-10">
      <%= render  "shared/errors",obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 background rounded", local: true) do |f| %>
      
      <div class="form-group row ">   
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label " %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :category, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name, 
            {prompt: "Make your selection from the list below (can be empty)"}, { multiple: true,size: 3, class: "custom-select shadow rounded"}) %>
        </div>
      </div>
        <div class="form-group row justify-content-center">
          <%= f.submit :value => "Okay", class: "btn btn-secondary"  %>
        </div>
      <%end%>
    </div>
  </div>
</div>