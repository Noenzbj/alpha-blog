<div class="container">
<table class="table table-striped table-dark thead-dark" >
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr scope="row">
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to "Show", article_path(article),class:"btn btn-secondary" %>
            <%= link_to "Delete", article_path(article), class: "btn btn-secondary", method: :delete, data: {confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-secondary" %>
        </td>
      </tr>
    <% end %>
    
  </tbody>

</table>
</div>