<h1 class="text-center mt-4">All users</h1>
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>
<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <h5><%= link_to user.username, user_path(user), class: "text-success" %></h5>
          </div>
          <div class="card-body">

            <%= link_to  (gravatar_for user, size: 150), user_path(user)%>
            <p class = "mt-3"><%= user.articles.count%> articles</p>

            
            <%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
            <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info" %>
           
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago, 
            edited <%= time_ago_in_words(user.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 
<div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
</div>